<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Property definitions -->
    <springProperty scope="context" name="appName" source="spring.application.name" defaultValue="portfolio"/>
    <property name="LOG_PATH" value="logs"/>
    <property name="LOG_FILE" value="${LOG_PATH}/application.log"/>
    
    <!-- Console Appender with colored output -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %highlight(%-5level) %cyan(%logger{36}) - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>
    
    <!-- File Appender -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/application-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
    </appender>
    
    <!-- Logstash Appender for ELK Stack (Local Profile - uses localhost) -->
    <springProfile name="local">
        <appender name="LOGSTASH" class="net.logstash.logback.appender.LogstashTcpSocketAppender">
            <destination>${LOGSTASH_HOST:-localhost}:${LOGSTASH_PORT:-5000}</destination>
            <encoder class="net.logstash.logback.encoder.LogstashEncoder">
                <customFields>{"app_name":"${appName}","environment":"local"}</customFields>
                <includeMdc>true</includeMdc>
            </encoder>
            <!-- Connection settings -->
            <keepAliveDuration>5 minutes</keepAliveDuration>
            <reconnectionDelay>10 seconds</reconnectionDelay>
            <!-- Write timeout -->
            <writeTimeout>1 minute</writeTimeout>
            <!-- If logstash is not available, don't block the application -->
            <queueSize>512</queueSize>
        </appender>
        <!-- Async Logstash Appender for better performance -->
        <appender name="ASYNC_LOGSTASH" class="ch.qos.logback.classic.AsyncAppender">
            <appender-ref ref="LOGSTASH"/>
            <queueSize>512</queueSize>
            <discardingThreshold>0</discardingThreshold>
            <includeCallerData>true</includeCallerData>
        </appender>
    </springProfile>
    
    <!-- Logstash Appender for ELK Stack (Production Profile - uses Docker hostname) -->
    <springProfile name="prod">
        <appender name="LOGSTASH" class="net.logstash.logback.appender.LogstashTcpSocketAppender">
            <destination>${LOGSTASH_HOST:-logstash}:${LOGSTASH_PORT:-5000}</destination>
            <encoder class="net.logstash.logback.encoder.LogstashEncoder">
                <customFields>{"app_name":"${appName}","environment":"prod"}</customFields>
                <includeMdc>true</includeMdc>
            </encoder>
            <!-- Connection settings -->
            <keepAliveDuration>5 minutes</keepAliveDuration>
            <reconnectionDelay>10 seconds</reconnectionDelay>
            <!-- Write timeout -->
            <writeTimeout>1 minute</writeTimeout>
            <!-- If logstash is not available, don't block the application -->
            <queueSize>512</queueSize>
        </appender>
        <!-- Async Logstash Appender for better performance -->
        <appender name="ASYNC_LOGSTASH" class="ch.qos.logback.classic.AsyncAppender">
            <appender-ref ref="LOGSTASH"/>
            <queueSize>512</queueSize>
            <discardingThreshold>0</discardingThreshold>
            <includeCallerData>true</includeCallerData>
        </appender>
    </springProfile>
    
    <!-- Logger configurations -->
    
    <!-- Application logger -->
    <logger name="com.backend.portfolio" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="ASYNC_LOGSTASH"/>
    </logger>
    
    <!-- Spring Framework -->
    <logger name="org.springframework" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="ASYNC_LOGSTASH"/>
    </logger>
    
    <!-- Hibernate -->
    <logger name="org.hibernate" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="ASYNC_LOGSTASH"/>
    </logger>
    
    <!-- SQL logging (when enabled) -->
    <logger name="org.hibernate.SQL" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="ASYNC_LOGSTASH"/>
    </logger>
    
    <!-- Security -->
    <logger name="org.springframework.security" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="ASYNC_LOGSTASH"/>
    </logger>
    
    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="ASYNC_LOGSTASH"/>
    </root>
    
    <!-- Profile specific configurations -->
    <springProfile name="local">
        <logger name="com.backend.portfolio" level="DEBUG"/>
        <root level="INFO"/>
    </springProfile>
    
    <springProfile name="prod">
        <logger name="com.backend.portfolio" level="INFO"/>
        <root level="WARN"/>
    </springProfile>
</configuration>

